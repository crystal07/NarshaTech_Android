<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    tools:context="com.sejin.campustown.activity.ForkRoadAcitivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="213dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/logo_campus_no_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="320dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp" />

    <Button
        android:id="@+id/btnMeetTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Meet Trip Friends \n"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="113dp" />

    <Button
        android:id="@+id/btnMembership"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:gravity="center_horizontal"
        android:text="Be Our Membership"
        app:layout_constraintTop_toBottomOf="@+id/btnMeetTrip"
        tools:layout_editor_absoluteX="110dp" />

    <Button
        android:id="@+id/btnPlanTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:gravity="center_horizontal"
        android:text="plan your trip"
        app:layout_constraintTop_toBottomOf="@+id/btnMembership"
        tools:layout_editor_absoluteX="125dp" />
</android.support.constraint.ConstraintLayout>
